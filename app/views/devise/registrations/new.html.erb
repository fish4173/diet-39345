<div class="contents row">
  <div class="container">
    <h2>下記の情報を入力してください</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", model: f.object %>

      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) Diet太郎", maxlength:"40" %>
      </div>


      <div class="field">
        <%= f.label :mail %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上の半角数字を入力)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :パスワードを再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :"身長 (数字のみ記載)" %><br />
        <%= f.text_area :height, class:"input-default", id:"height", placeholder:"例) 168.5", maxlength:"5" %>
      </div>

      <div class="field">
        <%= f.label :"体重 (数字のみ記載)"%><br />
        <%= f.text_area :weight, class:"input-default", id:"weight", placeholder:"例) 60.5", maxlength:"5" %>

      </div>

      <div class="field">
        <%= f.label :年令 %><br />
        <%= f.text_area :age, class:"input-default", id:"age", placeholder:"例) 20", maxlength:"4" %>
      </div>

     <div class="field">
        <%= f.label :性別 %><br />
        <%= f.text_area :sex, class:"input-default", id:"sex", placeholder:"例) 1=男性 2=女性,", maxlength:"1" %>
      </div>




      <div class="actions">
        <%= f.submit "ユーザー登録" %>
      </div>
    <% end %>
  </div>
</div>
