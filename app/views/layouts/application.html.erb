<!DOCTYPE html>
<html>
  <head>
    <title>Diet39345</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%# <script src="index.js"></script> %>
     <%# <script type="text/javascript" src="/index.js"></script> %>

  </head>

  <body>

    <header class="header">
      <div class="header_bar row">
        <h1 class="grid-6"><a href="/">Diet Calculation</a></h1>
        <% if user_signed_in? %>
          <div class="header-navi">
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%>
            <%= link_to "ユーザー編集",edit_user_path(current_user), class: "user-edit"%>
          </div>
        <% else %>
          <div class="header-navi">
            <% unless current_page?(new_user_session_path) %>
              <%= link_to 'ログイン', new_user_session_path, class: "login" %>
            <% end %>
            <% unless current_page?(new_user_registration_path) %>
              <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright Diet Calculation 2023.
      </p>
    </footer>
  </body>
</html>
